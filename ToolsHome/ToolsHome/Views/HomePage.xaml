<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   x:Class="ToolsHome.Views.HomePage">
<ContentPage.Content>
    <StackLayout Margin="50,20">
        <Label Text="¡W E L C O M E   T O T O O L S   H O M E!"
            HorizontalOptions="CenterAndExpand" 
            TextColor="{StaticResource colorAccent}"/>
        <Button x:Name="Mts"
                Margin="0,50"
            BackgroundColor="{StaticResource colorPrimary}"
            Text="Calcular Mts2"
            VerticalOptions="Center"
            TextTransform="None"
            Clicked="Mts2_Clicked"/>
        <Button x:Name="ToDo"
            BackgroundColor="{StaticResource colorPrimary}"
            Text="ToDo"
            VerticalOptions="Center"
                
            TextTransform="None"
            Clicked="ToDo_Clicked"/>
        <Label x:Name="lblRespuesta"
            Text=""/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>